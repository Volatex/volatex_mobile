<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добро пожаловать!"
            android:textSize="20sp"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/strategyList"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp" />

        <!-- Форма добавления стратегии -->
        <EditText
            android:id="@+id/figiInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="FIGI" />

        <EditText
            android:id="@+id/buyPriceInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buy Price"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/buyQtyInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buy Quantity"
            android:inputType="number" />

        <EditText
            android:id="@+id/sellPriceInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sell Price"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/sellQtyInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sell Quantity"
            android:inputType="number" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить стратегию"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
